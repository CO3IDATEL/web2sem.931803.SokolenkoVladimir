@model WebApplication4.Models.SignUpFoundViewModel
@{
    ViewData["Title"] = "Sign up";
}

<h2>Sign up</h2>
<p>User with same profile data already exists. Are you sure you want to sign up?</p>

<form class="form-horizontal" method="post" asp-action="SignUpExists">
    <input asp-for="FirstName" type="hidden" />
    <input asp-for="SecondName" type="hidden" />
    <input asp-for="DateOfBirth" type="hidden" />
    <input asp-for="Gender" type="hidden" />
    <input asp-for="WasFound" type="hidden" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.FirstName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.SecondName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">
            <p class="form-control-static">@Model.DateOfBirth.ToString("MMMM dd yyyy")r</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            @if (Model.Gender == WebApplication4.Models.Gender.Male)
            {
                <p class="form-control-static">Male</p>
            }
            else
            {
                <p class="form-control-static">Female</p>
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary">Sign up anyway</button>
        </div>
    </div>
</form>